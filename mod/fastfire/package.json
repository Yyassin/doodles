{
  "version": "0.3.11",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist/**/*.js",
    "dist/**/*.ts"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "fastfire",
  "author": {
    "name": "tockn",
    "email": "tockn.jp@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tockn/fastfire"
  },
  "keywords": [
    "firebase",
    "firestore",
    "activerecord",
    "orm"
  ],
  "module": "dist/active-fire.esm.js",
  "size-limit": [
    {
      "path": "dist/active-fire.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/active-fire.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^5.0.1",
    "husky": "^7.0.1",
    "size-limit": "^5.0.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@google-cloud/firestore": "^5.0.2",
    "firebase": "^10.4.0"
  }
}
