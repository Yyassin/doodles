{
    "compilerOptions": {
      "target": "es6",
      "lib": [
        "es2020",
        "dom",
        "dom.iterable",
        "esnext",
        "webworker"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "declaration": true,
      "noEmit": true,
      "jsx": "preserve",
      "incremental": true,
      "plugins": [
        {
          "name": "next"
        }
      ]
    },
    "include": [
      "src",
      ".next/types/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }